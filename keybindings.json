[
 {
    "key": "ctrl+c",
    "command": "editor.action.closeLightBulbWidget",
    "when": "lightBulbVisible"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeQuickFixWidget",
    "when": "quickFixWidgetVisible"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeParameterHints",
    "when": "parameterHintsVisible"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeSuggestWidget",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "listFocus && !inputFocus"
  },

  {
    "key": "ctrl+n",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "!filesExplorerFocus"
  },
  {
    "key": "ctrl+n",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "filesExplorerFocus"
  },
 
    "key": "n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },

  {
    "key": "alt+j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active || !terminal.active"
  },
  {
    "key": "alt+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "alt+x",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "alt+a",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+s",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  }
]
